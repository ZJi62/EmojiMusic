<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SubActivity">

    <TextView
        android:id="@+id/tv_sub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_margin="20dp"
        android:textColor="#FDB0B0"
        android:gravity="center"
        android:text="벚꽃이 떠오르는 노래"/>

    <ImageView
        android:id="@+id/img_spr"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@mipmap/spring1"/>

    <Button
        android:id="@+id/btn_spr"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:text="버스커버스커 - 벚꽃엔딩"
        android:textSize="15dp"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="오늘의 행운의 숫자는?"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="7"
        android:textSize="80dp"
        android:textColor="#FFC3C3"/>

    <ImageView
        android:id="@+id/img_spr2"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:src="@mipmap/spring2"/>

</LinearLayout>