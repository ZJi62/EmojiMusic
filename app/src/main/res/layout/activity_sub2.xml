<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SubActivity2">

    <TextView
        android:id="@+id/tv_sub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_margin="20dp"
        android:textColor="#DA9090"
        android:gravity="center"
        android:text="크리스마스에 듣고 싶은 노래"/>

    <ImageView
        android:id="@+id/img_win"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@mipmap/winter1"/>

    <Button
        android:id="@+id/btn_win"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:text="B1A4 - 크리스마스잖아요"
        android:textSize="13dp"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="오늘의 행운의 숫자는?"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="52"
        android:textSize="80dp"
        android:textColor="#CA6971"/>

    <ImageView
        android:id="@+id/img_win1"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:src="@mipmap/winter2"/>

</LinearLayout>